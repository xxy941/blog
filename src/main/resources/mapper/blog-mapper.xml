    <select id="selectBlogs" resultType="Blog">
        SELECT <include refid="selectFields"></include>
        FROM discuss_post
        WHERE id IN(
            SELECT t.id FROM
                (
                    SELECT id FROM
                        discuss_post
                    WHERE STATUS != 2
                    <if test="userId!=0">
                        and user_id = #{userId}
                    </if>
                    <if test="orderMode==0">
                        order by type desc,create_time desc
                    </if>
                    <if test="orderMode==1">
                        order by type desc,score desc,create_time desc
                    </if>
                        limit #{offset},#{limit}
                ) AS t
        ) ORDER BY TYPE DESC,create_time DESC
    </select>

    <select id="selectBlogRows" resultType="int">
        select count(id)
        from discuss_post
        where status != 2
        <if test="userId!=0">
            and user_id = #{userId}
        </if>
    </select>

    <select id="selectDiscussPostByUserId" resultType="Blog">
        select <include refid="selectFields"></include>
        from discuss_post
        where status != 2
        and user_id = #{userId}
        limit #{offset},#{limit}
    </select>

    <select id="selectBlogsByTag" resultType="Blog">
        SELECT <include refid="selectFields"></include>
        FROM discuss_post
        WHERE status != 2 and tag = #{tag}
        ORDER BY TYPE DESC,create_time DESC
        limit #{offset},#{limit}
    </select>

    <select id="selectTagBlogRows" resultType="int">
        SELECT count(id)
        FROM discuss_post
        WHERE status != 2 and tag = #{tag}
    </select>

    <insert id="insertBlog" parameterType="Blog" keyProperty="id">
        insert into discuss_post(<include refid="insertFields"></include>)
        values (#{userId},#{title},#{content},#{type},#{status},#{createTime},#{commentCount},#{score},#{tag})
    </insert>

    <select id="selectBlogById" resultType="Blog">
        select <include refid="selectFields"></include>
        from discuss_post
        where id = #{id}
    </select>
    
    <update id="updateCommentCount">
        update discuss_post set comment_count = #{commentCount} where id = #{id}
    </update>

    <update id="updateType">
        update discuss_post set type = #{type} where id = #{id}
    </update>

    <update id="updateStatus">
        update discuss_post set status = #{status} where id = #{id}
    </update>

    <update id="updateScore">
        update discuss_post set score = #{score} where id = #{id}
    </update>
</mapper>